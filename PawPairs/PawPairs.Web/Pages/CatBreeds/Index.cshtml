@page
@model PawPairs.Web.Pages.CatBreeds.IndexModel
@{
ViewData["Title"] = "Cat Breeds";
}

<div class="page-hero mb-4 d-flex align-items-center justify-content-between">
    <div>
        <h2 class="mb-1">🐱 Cat Breeds</h2>
        <div class="small-muted">External API (CatFact Ninja) — browse & learn</div>
    </div>
    <span class="badge badge-soft">Cat API Proxy</span>
</div>

@if (TempData["Error"] is not null)
{
<div class="alert alert-danger">
    API error: @TempData["Error"]
</div>
}

<div class="kawaii-card mb-4">
    <form method="get" class="row g-2 align-items-end">
        <div class="col-md-4">
            <label class="form-label fw-semibold">Search (breed)</label>
            <input class="form-control" name="Q" value="@Model.Q" placeholder="e.g. Abyssinian, Bengal..." />
        </div>

        <div class="col-md-3">
            <label class="form-label fw-semibold">Country</label>
            <input class="form-control" name="Country" value="@Model.Country" placeholder="e.g. United States, Greece..." />
        </div>

        <div class="col-md-3">
            <label class="form-label fw-semibold">Coat category</label>
            <select class="form-select" name="CoatCategory">
                <option value="">Any</option>
                <option value="Short" selected="@(Model.CoatCategory == "Short")">Short</option>
                <option value="Long" selected="@(Model.CoatCategory == "Long")">Long</option>
                <option value="Semi-long" selected="@(Model.CoatCategory == "Semi-long")">Semi-long</option>
                <option value="Hairless" selected="@(Model.CoatCategory == "Hairless")">Hairless</option>
                <option value="Rex" selected="@(Model.CoatCategory == "Rex")">Rex</option>
                <option value="Other" selected="@(Model.CoatCategory == "Other")">Other</option>
                <option value="Unknown" selected="@(Model.CoatCategory == "Unknown")">Unknown</option>
            </select>
        </div>

        <div class="col-md-2">
            <label class="form-label fw-semibold">Page size</label>
            <select class="form-select" name="PageSize">
                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                <option value="25" selected="@(Model.PageSize == 25)">25</option>
                <option value="50" selected="@(Model.PageSize == 50)">50</option>
            </select>
        </div>

        <div class="col-12 d-flex gap-2 mt-2">
            <button class="btn btn-primary" type="submit">✨ Apply</button>
            <a class="btn btn-outline-secondary" asp-page="./Index">Reset</a>
        </div>
    </form>
</div>

@if (Model.Breeds.Count == 0)
{
<div class="alert alert-info">
    No breeds found. Try a different search 🐾
</div>
}
else
{
<div class="row g-3">
    @foreach (var b in Model.Breeds)
    {
    <div class="col-md-4">
        <a asp-page="./Details"
           asp-route-breed="@b.Breed"
           class="text-decoration-none text-reset">

            <div class="card h-100 pet-card breed-click">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="pet-name d-flex align-items-center gap-2">
                                @b.Breed <span class="text-muted small">→</span>
                            </div>
                            <div class="pet-sub">
                                <span class="me-2">🌍 <b>@(string.IsNullOrWhiteSpace(b.Country) ? "Unknown" : b.Country)</b></span>
                                <span>🧶 <b>@b.CoatCategory</b></span>
                            </div>
                        </div>

                        <span class="badge badge-soft">
                                    🐾 @b.CoatCategory
                                </span>
                    </div>

                    <div class="pet-meta mt-3">
                        <div><span class="muted">Origin:</span> <b>@(string.IsNullOrWhiteSpace(b.Origin) ? "—" : b.Origin)</b></div>
                        <div class="mt-1"><span class="muted">Coat:</span> <b>@(string.IsNullOrWhiteSpace(b.Coat) ? "—" : b.Coat)</b></div>
                        <div class="mt-1"><span class="muted">Pattern:</span> <b>@(string.IsNullOrWhiteSpace(b.Pattern) ? "—" : b.Pattern)</b></div>
                    </div>

                    <div class="mt-3 d-flex justify-content-end">
                        <span class="btn btn-sm btn-outline-dark">View details</span>
                    </div>
                </div>
            </div>

        </a>
    </div>
    }
</div>

<div class="d-flex justify-content-between align-items-center mt-4">
    <div class="text-muted small">
        Page <b>@Model.Result!.Page</b> / <b>@Model.Result.TotalPages</b>
        · Total results (after filters): <b>@Model.Result.TotalCount</b>
    </div>

    <div class="d-flex gap-2">
        @if (Model.Result.HasPreviousPage)
        {
        <a class="btn btn-outline-secondary"
           asp-page="./Index"
           asp-route-Q="@Model.Q"
           asp-route-Country="@Model.Country"
           asp-route-CoatCategory="@Model.CoatCategory"
           asp-route-PageSize="@Model.PageSize"
           asp-route-Page="@(Model.Result.Page - 1)">← Prev</a>
        }
        @if (Model.Result.HasNextPage)
        {
        <a class="btn btn-outline-secondary"
           asp-page="./Index"
           asp-route-Q="@Model.Q"
           asp-route-Country="@Model.Country"
           asp-route-CoatCategory="@Model.CoatCategory"
           asp-route-PageSize="@Model.PageSize"
           asp-route-Page="@(Model.Result.Page + 1)">Next →</a>
        }
    </div>
</div>
}

<style>
    .breed-click { cursor:pointer; transition: transform .12s ease, box-shadow .12s ease; }
    .breed-click:hover { transform: translateY(-3px); box-shadow: 0 14px 35px rgba(0,0,0,.12); }
</style>
