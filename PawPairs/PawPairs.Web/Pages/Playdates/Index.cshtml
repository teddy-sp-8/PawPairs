@page
@model PawPairs.Web.Pages.Playdates.IndexModel
@{
    ViewData["Title"] = "Playdates";
}

<div class="page-hero mb-4 d-flex align-items-center justify-content-between">
    <div>
        <h2 class="mb-1">🧸 Playdates</h2>
        <div class="small-muted">Cute little meetups between pets ✨</div>
    </div>

    <a class="btn btn-primary" asp-page="Create">➕ Create Playdate</a>
</div>

@if (Model.Playdates.Count == 0)
{
    <div class="alert alert-info">
        No playdates yet. Create one and let the chaos begin 🐾
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var d in Model.Playdates.OrderBy(x => x.ScheduledAtUtc))
        {
            var petA = Model.PetLabelById.TryGetValue(d.PetAId, out var aLabel) ? aLabel : d.PetAId.ToString();
            var petB = Model.PetLabelById.TryGetValue(d.PetBId, out var bLabel) ? bLabel : d.PetBId.ToString();

            var local = DateTime.SpecifyKind(d.ScheduledAtUtc, DateTimeKind.Utc).ToLocalTime();
            var isPast = local < DateTime.Now;
            var badgeClass = isPast ? "badge bg-secondary" : "badge bg-success";

            <div class="col-md-6 col-lg-4">
                <div class="card h-100 pet-card playdate-card">
                    <div class="card-body">

                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="pet-name">📅 @local.ToString("ddd, dd MMM")</div>
                                <div class="pet-sub">
                                    ⏰ @local.ToString("HH:mm") <span class="text-muted">(@d.ScheduledAtUtc.ToString("u").Replace("Z"," UTC"))</span>
                                </div>
                            </div>

                            <span class="@badgeClass">
                                @(isPast ? "Past" : "Upcoming")
                            </span>
                        </div>

                        <div class="mt-3">
                            <div class="small text-muted mb-1">📍 Location</div>
                            <div class="fw-semibold">@d.LocationName</div>
                        </div>

                        <hr class="my-3"/>

                        <div class="d-flex flex-column gap-2">
                            <div>
                                <div class="small text-muted">🐶 Pet A</div>
                                <div class="fw-semibold">@petA</div>
                            </div>
                            <div>
                                <div class="small text-muted">🐱 Pet B</div>
                                <div class="fw-semibold">@petB</div>
                            </div>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(d.Notes))
                        {
                            var collapseId = $"notes_{d.Id.ToString("N")}";

                            <div class="mt-3">
                                <button class="btn btn-sm btn-outline-dark w-100"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#@collapseId"
                                        aria-expanded="false">
                                    📝 Notes
                                </button>

                                <div class="collapse mt-2" id="@collapseId">
                                    <div class="p-3 rounded bg-light border small" style="white-space: pre-wrap;">
                                        @d.Notes
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .playdate-card {
        transition: transform .12s ease, box-shadow .12s ease;
        cursor: default;
    }
    .playdate-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 14px 35px rgba(0,0,0,.12);
    }
</style>
