@page
@model PawPairs.Web.Pages.Matches.PendingModel
@{
    ViewData["Title"] = "Pending Matches";
}

<div class="page-hero mb-4 d-flex align-items-center justify-content-between">
    <div>
        <h2 class="mb-1">💌 Pending Requests</h2>
        <div class="small-muted">Choose a pet → manage incoming match requests</div>
    </div>
    <span class="badge badge-soft">Inbox</span>
</div>

@if (TempData["Error"] is not null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="kawaii-card mb-4">
    <form method="get" class="row g-2 align-items-end">
        <div class="col-md-8">
            <label class="form-label fw-semibold">Requests received by</label>
            <select class="form-select" asp-for="ToPetId">
                <option value="">-- choose a pet --</option>
                @foreach (var p in Model.PetOptions)
                {
                    <option value="@p.Id" selected="@(Model.ToPetId == p.Id)">@p.Label</option>
                }
            </select>
            <div class="form-text">We load pending requests sent to this pet.</div>
        </div>
        <div class="col-md-4">
            <button class="btn btn-primary w-100">Load</button>
        </div>
    </form>
</div>

@if (Model.ToPetId == Guid.Empty)
{
    <div class="alert alert-info">Pick a pet to see the pending inbox.</div>
}
else if (Model.Pending.Count == 0)
{
    <div class="alert alert-info">No pending requests for that pet.</div>
}
else
{
    <div class="row g-3">
        @foreach (var r in Model.Pending.OrderByDescending(x => x.CreatedAtUtc))
        {
            <div class="col-md-6">
                <div class="card p-3 pet-card">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="fw-semibold">
                                @r.FromPetName <span class="text-muted">(@r.FromOwnerName)</span>
                            </div>
                            <div class="small-muted">wants to match with</div>
                            <div class="fw-semibold">
                                @r.ToPetName <span class="text-muted">(@r.ToOwnerName)</span>
                            </div>
                            <div class="small text-muted mt-2">
                                Created: @r.CreatedAtUtc.ToLocalTime()
                            </div>
                        </div>
                        <span class="badge bg-warning text-dark">Pending</span>
                    </div>

                    <hr class="my-3"/>

                    <div class="d-flex gap-2">
                        <form method="post" asp-page-handler="Accept" asp-route-id="@r.Id" class="w-50">
                            <button class="btn btn-success w-100">Accept ✅</button>
                        </form>
                        <form method="post" asp-page-handler="Reject" asp-route-id="@r.Id" class="w-50">
                            <button class="btn btn-outline-danger w-100">Reject ✖</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}