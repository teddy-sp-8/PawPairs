@page "{id:guid}"
@model PawPairs.Web.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="page-hero mb-4">
    <h2 class="mb-1 text-danger">🗑 Delete User</h2>
    <div class="small-muted">This cannot be undone.</div>
</div>

@if (TempData["Error"] is not null)
{
    <div class="alert alert-danger">API error: @TempData["Error"]</div>
}

<div class="card">
    <div class="card-body">
        <p class="mb-2">Are you sure you want to delete this user?</p>

        <div class="kawaii-card" style="background: #fff7f0;">
            <div class="fw-semibold">@Model.UserToDelete!.FirstName @Model.UserToDelete!.LastName</div>
            <div class="text-muted">@Model.UserToDelete!.Email</div>
            <div>@Model.UserToDelete!.City</div>
        </div>

        <form method="post" class="mt-3 d-flex gap-2">
            <button class="btn btn-danger" type="submit">Yes, delete</button>
            <a class="btn btn-outline-secondary" asp-page="./Index">Cancel</a>
        </form>
    </div>
</div>