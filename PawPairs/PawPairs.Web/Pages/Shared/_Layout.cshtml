@using PawPairs.Web.Auth
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PawPairs</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/PawPairs.Web.styles.css" asp-append-version="true"/>
</head>

<body class="bg-light">

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand fw-bold" asp-page="/Index">
                🐾 PawPairs
            </a>

            <!-- Mobile toggle -->
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Nav -->
            <div class="collapse navbar-collapse" id="mainNavbar">

                <!-- Left nav -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Index">Users</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Pets/Index">Pets</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Matches/Index">Matches</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Playdates/Index">Playdates</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           id="breedsDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Breeds
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-page="/DogBreeds/Index">
                                    🐶 Dog Breeds
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-page="/CatBreeds/Index">
                                    🐱 Cat Breeds
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a>
                    </li>
                </ul>

                <!-- Right auth -->
                <div class="d-flex align-items-center gap-2">
                    @if (SessionAuth.IsSignedIn(Context))
                    {
                        <span class="text-muted small">
                            Hi, <b>@SessionAuth.GetUserName(Context)</b> 👋
                        </span>

                        <form method="post" asp-page="/Auth/Logout" class="mb-0">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-primary" asp-page="/Auth/Login">
                            Login
                        </a>
                    }
                </div>

            </div>
        </div>
    </nav>
</header>

<!-- Page content -->
<div class="container py-4">
    <main role="main">
        @RenderBody()
    </main>
</div>

<!-- Footer -->
<footer class="border-top bg-white text-muted py-3 mt-auto">
    <div class="container text-center small">
        &copy; 2026 — PawPairs ·
        <a asp-page="/Privacy" class="text-muted">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
